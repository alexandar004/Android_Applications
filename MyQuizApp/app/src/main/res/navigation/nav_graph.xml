<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstQuestion">
    <fragment
        android:id="@+id/firstQuestion"
        android:name="com.example.myquizapp.FirstQuestionFragment"
        android:label="firstQuestion"
        tools:layout="@layout/fragment_first_question">

        <action
            android:id="@+id/action_firstQuestion_to_secondQuestion"
            app:destination="@id/secondQuestion" />
    </fragment>
    <fragment
        android:id="@+id/secondQuestion"
        android:name="com.example.myquizapp.SecondQuestionFragment"
        android:label="secondQuestion"
        tools:layout="@layout/fragment_second_question">

        <action
            android:id="@+id/action_secondQuestion_to_third_question"
            app:destination="@id/third_question" />
        <action
            android:id="@+id/action_secondQuestion_to_firstQuestion"
            app:destination="@id/firstQuestion" />
    </fragment>
    <fragment
        android:id="@+id/third_question"
        android:name="com.example.myquizapp.ThirdQuestionFragment"
        android:label="thirdQuestion"
        tools:layout="@layout/fragment_third_question">

        <action
            android:id="@+id/action_third_question_to_gameOver"
            app:destination="@id/gameOver" />
        <action
            android:id="@+id/action_third_question_to_secondQuestion"
            app:destination="@id/secondQuestion" />
    </fragment>

    <fragment
        android:id="@+id/gameOver"
        android:name="com.example.myquizapp.GameOverFragment"
        android:label="gameOver"
        tools:layout="@layout/fragment_game_over">

        <action
            android:id="@+id/action_gameOver_to_firstQuestion"
            app:destination="@id/firstQuestion" />
        <action
            android:id="@+id/action_gameOver_to_third_question"
            app:destination="@id/third_question" />
    </fragment>
</navigation>